@using QuizApp.UI.ViewModel
@model QuizApp.UI.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<div class="row-fluid">
    <div style="height: 150px;">
    </div>
</div>
<div class="row-fluid">
    <div class="login">
        @Html.Partial("_PageHeaderPartial")

        <div class="row-fluid">
            <div class="span6">
                <div class="block">
                    <div class="head">
                        <h2>
                            Registered Users</h2>
                        <ul class="buttons">
                            <li><a href="#" onclick=" source('form_default'); return false; ">
                                    <div class="icon">
                                        <span class="ico-info"></span>
                                    </div>
                                </a></li>
                        </ul>
                    </div>
                    <div class="data-fluid">
                        @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, htmlAttributes: new { @id = "validateLoginForm", @name = "validateLoginForm" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()

                            <div class="row-form">
                                <div class="span12">
                                    @Html.TextBoxFor(m => m.UserName, new { @id = "login", @name = "login", placeholder = "UserId", @class = "validate[required]" })
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </div>
                            </div>
                            <div class="row-form">
                                <div class="span12">
                                    @Html.PasswordFor(m => m.Password, new { name = "password", placeholder = "Password", @class = "validate[required]" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>            
                            </div>
                            <div class="row-form">
                                <div class="span12">
                                    @Html.CheckBoxFor(m => m.RememberMe) Keep me signed in
                                </div>
                            </div>
                            <div class="row-form">
                                <div class="span12">
                                    <button class="btn" type="submit">Sign in <span class="icon-arrow-next icon-white"></span></button>
                                </div>                
                            </div>
                        }

                        <form action="@Url.Action("Register", "Account", new { area = "" })">
                            <button class="btn" type="submit">Register <span class="icon-arrow-next icon-white"></span></button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="span6">
                @Html.Partial("_ExternalLoginsListPartial", (ExternalLoginListViewModel)ViewBag.ExternalLoginList)
            </div>
        </div>
    </div>
</div>
@section ModalDivAndExtras
{
    <div class="ui-dialog ui-widget ui-widget-content ui-corner-all ui-front ui-draggable ui-resizable sourcePosition"
         tabindex="-1" role="dialog" style="position: fixed; height: auto; width: 1623px;
                                                                                              top: 214.5px; left: 20px; display: none;" aria-describedby="source" aria-labelledby="ui-id-1">
        <div class="ui-dialog-titlebar ui-widget-header ui-corner-all ui-helper-clearfix">
            <span id="ui-id-1" class="ui-dialog-title">Source</span>
            <button class="ui-dialog-titlebar-close"></button>
        </div>
        <div class="dialog ui-dialog-content ui-widget-content" id="source" style="width: auto;
                                                                                         min-height: 89px; max-height: none; height: auto;">
        </div>
        <div class="ui-resizable-handle ui-resizable-n" style="z-index: 90;">
        </div>
        <div class="ui-resizable-handle ui-resizable-e" style="z-index: 90;">
        </div>
        <div class="ui-resizable-handle ui-resizable-s" style="z-index: 90;">
        </div>
        <div class="ui-resizable-handle ui-resizable-w" style="z-index: 90;">
        </div>
        <div class="ui-resizable-handle ui-resizable-se ui-icon ui-icon-gripsmall-diagonal-se"
             style="z-index: 90;">
        </div>
        <div class="ui-resizable-handle ui-resizable-sw" style="z-index: 90;">
        </div>
        <div class="ui-resizable-handle ui-resizable-ne" style="z-index: 90;">
        </div>
        <div class="ui-resizable-handle ui-resizable-nw" style="z-index: 90;">
        </div>
    </div>
}

@section Scripts_MasterLayout
{
    @Scripts.Render("~/Scripts/ViewScripts/Login")
}


