@model QuizApp.UI.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<div class="row-fluid">
    <div style="height: 150px;">
    </div>
</div>
<div class="row-fluid">
    <div class="login">
        @Html.Partial("_PageHeaderPartial")

        <div class="row-fluid">
            <div class="span6">
                <div class="block">
                    <div class="head">
                        <h2>
                            Registered Users</h2>
                        <ul class="buttons">
                            <li><a href="#" onclick="source('form_default'); return false;">
                                    <div class="icon">
                                        <span class="ico-info"></span>
                                    </div>
                                </a></li>
                        </ul>
                    </div>
                    <div class="data-fluid">
                        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()

                            <div class="row-form">
                                <div class="span12">
                                    @Html.TextBoxFor(m => m.UserName, new { name = "login", placeholder = "UserId" })
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </div>
                            </div>
                            <div class="row-form">
                                <div class="span12">
                                    @Html.PasswordFor(m => m.Password, new { name = "password", placeholder = "Password" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>            
                            </div>
                            <div class="row-form">
                                <div class="span12">
                                    @Html.CheckBoxFor(m => m.RememberMe) Keep me signed in
                                </div>
                            </div>
                            <div class="row-form">
                                <div class="span12">
                                    <button class="btn" type="submit">Sign in <span class="icon-arrow-next icon-white"></span></button>
                                </div>                
                            </div>
                        }

                        <form action="@Url.Action("Register","Account",new { area=""})">
                            <button class="btn" type="submit">Register <span class="icon-arrow-next icon-white"></span></button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="span6">
                <div class="block">
                    <div class="head">
                        <h2>
                            Registered Users</h2>
                        <ul class="buttons">
                            <li><a href="#" onclick="source('form_default'); return false;">
                                    <div class="icon">
                                        <span class="ico-info"></span>
                                    </div>
                                </a></li>
                        </ul>
                    </div>
                </div>
                <div class="widgets">
                    <a href="#" class="swidget blue clean" style="background: #3b5999 !important;height: 100px;width:100px">
                        <div class="value" style="font-size: 72px;">
                            <span aria-hidden="true" class="iconSocial-facebook"></span>
                            <!--<img src="Content/img/loader.gif" alt="loader" />-->
                        </div>
                    </a>
                    <a href="#" class="swidget blue" style="background: #e04d38	 !important;height: 100px;width:100px">
                        <div class="value" style="font-size: 72px;">
                            <span class="iconSocial-google"></span>
                        </div>
                        <!--  <div class="bottom">
                                  <div class="text">
                                      Google</div>
                              </div> -->
                    </a>
                                    
                    <a href="#" class="swidget orange" style="background:  #00acee !important;height: 100px;width:100px">
                        <div class="value" style="font-size: 72px;">
                            <span class="iconSocial-twitter"></span>
                        </div>
                        <!-- <div class="bottom">
                                 <div class="text">
                                     Info</div>
                                 <div class="value">
                                     2,312</div>
                             </div> -->
                    </a>
                    <a href="#" class="swidget orange" style="background: #00A600 !important;height: 100px;width:100px">
                        <div class="value" style="font-size: 72px;">
                            <span class="iconSocial-windows8"></span>
                        </div>
                        <!-- <div class="bottom">
                                 <div class="text">
                                     Info</div>
                                 <div class="value">
                                     2,312</div>
                             </div> -->
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

