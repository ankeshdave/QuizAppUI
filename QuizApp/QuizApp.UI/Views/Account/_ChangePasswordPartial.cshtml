@model QuizApp.UI.Models.LocalPasswordModel

<h3>Change password</h3>

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="block">
        <div class="head">                                
            <h2>Change Password</h2>
            <ul class="buttons">             
                <li><a href="#" onClick="source('form_default'); return false;"><div class="icon"><span class="ico-info"></span></div></a></li>
            </ul>                                  
        </div>  
        <div class="data-fluid">
            <div class="row-form">
                <div class="span3">
                    @Html.LabelFor(m => m.OldPassword)
                </div>
                <div class="span9">
                    <input type="text" placeholder="Placeholder example"/>
                    @Html.PasswordFor(m => m.OldPassword,htmlAttributes:new{})
                </div>
            </div>
            <div class="row-form">
                <div class="span3">
                    @Html.LabelFor(m => m.NewPassword)
                </div>
                <div class="span9">
                    <input type="text" placeholder="Placeholder example"/>
                    @Html.PasswordFor(m => m.NewPassword,htmlAttributes:new{})
                </div>
            </div>
            <div class="row-form">
                <div class="span3">
                    @Html.LabelFor(m => m.ConfirmPassword)
                </div>
                <div class="span9">
                    <input type="text" placeholder="Placeholder example"/>
                    @Html.PasswordFor(m => m.ConfirmPassword, htmlAttributes: new { id = "ConfirmPassword", CssClassPropertyAttribute = "validate[required,equals[OldPassword]]" })
                </div>
            </div>
        </div>
    </div>
    
    <fieldset>
        <legend>Change Password Form</legend>
@*        <ol>
            <li>
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword)
                
            </li>
            <li>
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>*@
        <input type="submit" value="Change password" />
    </fieldset>
}
