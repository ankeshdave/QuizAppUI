@if (Request.IsAuthenticated)
{
    <li>
        <a href="@Url.Action("Index", "Home", new { area = "Admin" }, null)" class="button blue">
            <div class="icon">
                <span class="ico-monitor"></span>
            </div>
            <div class="name">Admin Area</div>
        </a>
    </li>
}
<li>
    @if (Request.IsAuthenticated)
    {
        <div class="user">
            <img src="~/Content/img/examples/users/dmitry_m.jpg" align="left" alt="User Image"/>
            <a href="@Url.Action("Manage", "Account", new { area = "" })" class="name">
                <span>@User.Identity.Name</span>
                <span class="sm">Role</span>
            </a>
            <br/>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <a href="javascript:document.getElementById('logoutForm').submit()" class="name">
                    <span class="sm">Log off</span>
                </a>
            }
        </div>
        <div class="buttons">
            <div class="sbutton green navButton">
                <a href="#"><span class="ico-align-justify"></span></a>
            </div>
            <div class="sbutton blue">
                <a href="#"><span class="ico-cogs"></span></a>
                <div class="popup">
                    <div class="arrow"></div>
                    <div class="row-fluid">
                        <div class="row-form">
                            <div class="span12"><strong>SETTINGS</strong></div>
                        </div>                                    
                        <div class="row-form">
                            <div class="span4">Navigation:</div>
                            <div class="span8">
                                <label><input type="radio" class="cNav" name="cNavButton" value="default"/> Default</label>
                                <label><input type="radio" class="cNav" name="cNavButton" value="bordered"/> Bordered</label>
                            </div>
                        </div>
                        <div class="row-form">
                            <div class="span4">Nav color:</div>
                            <div class="span8">
                                <div class="cNavC">
                                    <span class="color_1" id="cNavButColor"></span>
                                    <span class="color_2" id="cNavButColor"></span>
                                    <span class="color_3" id="cNavButColor"></span>
                                    <span class="color_4" id="cNavButColor"></span>
                                    <span class="color_5" id="cNavButColor"></span>
                                    <span class="color_6" id="cNavButColor"></span>
                                    <span class="color_7" id="cNavButColor"></span>
                                    <span class="color_8" id="cNavButColor"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row-form">
                            <div class="span4">Top navigation:</div>
                            <div class="span8">
                                <label><input type="radio" class="cTopNavH" name="cTopNavHide" value="show"/> Show</label>
                                <label><input type="radio" class="cTopNavH" name="cTopNavHide" value="hide"/> Hide</label>
                            </div>
                        </div> 
                        <div class="row-form">
                            <div class="span4">Content:</div>
                            <div class="span8">
                                <label><input type="radio" class="cCont" name="cContent" value=""/> Responsive</label>
                                <label><input type="radio" class="cCont" name="cContent" value="fixed"/> Fixed</label>
                            </div>
                        </div>                                    
                    </div>
                </div>
            </div>                        
        </div>

    }
    else
    {
        <div class="user">
            <a href="@Url.Action("Register", "Account", new { area = "" })" class="name" id="registerLink">
                <span>Register</span>
            </a>
            <br/>
            <a href="@Url.Action("Login", "Account", new { area = "" })" class="name" id="loginLink">
                <span>LogIn</span>
            </a>
        </div>
    }
</li>
