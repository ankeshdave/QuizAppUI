@using QuizApp.UI.Models
@using QuizApp.UI.ViewModel
@model QuizApp.UI.Models.RecentActivitiesModel


    
<div class="block">
    @Html.Partial("_BlockHeaderPartial", new BlockHeaderViewModel { HeaderText = "Recent Activities", ShowInfo = false })
    <div class="data-fluid">
        <table class="table tickets">
            @for (int i = 0; i < Model.Activities.Count; i++)
            {
                var activity = Model.Activities[i];
                <tr>
                    @if (activity.State == ActivityState.New)
                    {
                        <td class="bl_blue" width="55">
                            <span class="label label-info">@activity.State</span>
                        </td>
                    }
                    @if (activity.State == ActivityState.Read)
                    {
                        <td class="bl_red" width="55">
                            <span class="label label-info">@activity.State</span>
                        </td>
                    }
                    <td width="100">@activity.ActivityType<span class="mark">@activity.CreatedOn.Date.ToLongDateString()</span></td>
                    <td><a class="cblue" href="#">@activity.Message</a><span class="mark">Created by</span></td>
                </tr>
            }
        </table>

    </div>

</div>

      
    
